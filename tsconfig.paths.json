{
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@constants": ["./constants"],
			"@shims": ["./shims"],
			"@layouts": ["./ui/layouts"],
			"@layouts/*": ["./ui/layouts/*"],
			"@containers": ["./ui/containers"],
			"@containers/*": ["./ui/containers/*"],
			"@components": ["./ui/components"],
			"@components/*": ["./ui/components/*"],
			"@atoms": ["./ui/atoms"],
			"@molecules": ["./ui/molecules"],
			"@atoms/*": ["./ui/atoms/*"],
			"@molecules/*": ["./ui/molecules/*"],
			"@theme": ["./ui/styled/theme"],
			"@services": ["./lib/services"],
			"@utils": ["./lib/utils"],
			"@utils/*": ["./lib/utils/*"],
			"@hooks": ["./lib/hooks"],
			"@hooks/*": ["./lib/hooks/*"],
			"@contexts": ["./lib/contexts"],
			"@contexts/*": ["./lib/contexts/*"],
			"@stores": ["./lib/stores"],
			"@stores/*": ["./lib/stores/*"],
			"@bases": ["./ui/styled/bases"],
			"@templates": ["./ui/styled/templates"],
			"@pages": ["./ui/pages"],
			"@pages/*": ["./ui/pages/*"]
		}
	}
}
